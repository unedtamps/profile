---
import { siteConfig } from "../config";
import "aos/dist/aos.css"; 

const hasExperience = siteConfig.experience && siteConfig.experience.length > 0;
const experience = siteConfig.experience ?? [];
const visibleCount = 3; 

const visibleExperience = experience.slice(0, visibleCount);
const hiddenExperience = experience.slice(visibleCount);
const totalItems = experience.length;
---

{
  hasExperience && (
    <section id="experience" class="p-8 sm:p-12 md:p-16 lg:p-24">
      <div>
        <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-16 items-start">
          
          <div class="lg:col-span-4">
            <h2 class="text-3xl sm:text-4xl md:text-5xl xl:text-7xl font-bold text-gray-900">
              Experience
            </h2>
            <div
              class="w-[75px] h-[5px] mt-2 rounded-full"
              style={`background-color: ${siteConfig.accentColor}`}
            />
          </div>

          <div class="lg:col-span-8">
            <div class="relative">
              
              {visibleExperience.map((exp, index) => {
                const isLastItemGlobal = index === totalItems - 1;
                
                return (
                  <div class="relative mb-12 last:mb-0" data-aos="fade-up" data-aos-delay={index * 100}>
                    <div
                      class="absolute left-1/2 -top-4 w-4 h-4 bg-white border-2 rounded-full -translate-x-1/2 z-20 transition-all duration-300"
                      style={`border-color: ${siteConfig.accentColor}; background-color: ${siteConfig.accentColor}`}
                    />

                    {!isLastItemGlobal && (
                      <div class="absolute left-1/2 bottom-50 w-0.5 h-full bg-gray-300 -translate-x-1/2 translate-y-4 z-10" style="top: 1rem;" />
                    )}

                    <div class="bg-white rounded-lg shadow-sm border border-gray-100 p-4 sm:p-5 md:p-6 hover:shadow-md transition-shadow duration-300 relative z-20">
                      <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between mb-4">
                        <div>
                          <h3 class="text-lg sm:text-xl font-semibold text-gray-900">
                            {exp.title}
                          </h3>
                          <p class="text-base sm:text-lg" style={`color: ${siteConfig.accentColor}`}>
                            {exp.company}
                          </p>
                        </div>
                        <span class="text-xs sm:text-sm text-gray-500 mt-2 sm:mt-0">
                          {exp.dateRange}
                        </span>
                      </div>
                      <ul class="space-y-2">
                        {exp.bullets.map((bullet) => (
                          <li class="flex items-start">
                            <span class="inline-block w-1.5 h-1.5 rounded-full bg-gray-400 mt-2 mr-3 flex-shrink-0" />
                            <span class="text-sm sm:text-base text-gray-600">
                              {bullet}
                            </span>
                          </li>
                        ))}
                      </ul>
                    </div>
                  </div>
                );
              })}

              {hiddenExperience.length > 0 && (
                <div 
                  id="expandable-experience-wrapper" 
                  class="grid grid-rows-[0fr] transition-[grid-template-rows] duration-500 ease-in-out"
                >
                  <div class="overflow-hidden pt-5 -mt-5">
                    {hiddenExperience.map((exp, index) => {
                      const globalIndex = index + visibleCount;
                      const isLastItemGlobal = globalIndex === totalItems - 1;

                      return (
                        <div class="relative mb-12 last:mb-0" data-aos="fade-up" data-aos-delay={globalIndex * 100}>
                          <div
                            class="absolute left-1/2 -top-4 w-4 h-4 bg-white border-2 rounded-full -translate-x-1/2 z-20 transition-all duration-300"
                            style={`border-color: ${siteConfig.accentColor}; background-color: ${siteConfig.accentColor}`}
                          />


                          {!isLastItemGlobal && (
                             <div class="absolute left-1/2 bottom-0 w-0.5 h-full bg-gray-300 -translate-x-1/2 translate-y-4 z-10" style="top: 1rem;" />
                          )}

                          <div class="bg-white rounded-lg shadow-sm border border-gray-100 p-4 sm:p-5 md:p-6 hover:shadow-md transition-shadow duration-300 relative z-20">
                            <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between mb-4">
                              <div>
                                <h3 class="text-lg sm:text-xl font-semibold text-gray-900">
                                  {exp.title}
                                </h3>
                                <p class="text-base sm:text-lg" style={`color: ${siteConfig.accentColor}`}>
                                  {exp.company}
                                </p>
                              </div>
                              <span class="text-xs sm:text-sm text-gray-500 mt-2 sm:mt-0">
                                {exp.dateRange}
                              </span>
                            </div>
                            <ul class="space-y-2">
                              {exp.bullets.map((bullet) => (
                                <li class="flex items-start">
                                  <span class="inline-block w-1.5 h-1.5 rounded-full bg-gray-400 mt-2 mr-3 flex-shrink-0" />
                                  <span class="text-sm sm:text-base text-gray-600">
                                    {bullet}
                                  </span>
                                </li>
                              ))}
                            </ul>
                          </div>
                        </div>
                      );
                    })}
                  </div>
                </div>
              )}

              {hiddenExperience.length > 0 && (
                <div class="flex justify-center mt-8">
                  <button
                    id="toggle-experience-btn"
                    class="group p-3 rounded-full bg-gray-900 text-white hover:bg-gray-800 transition-all duration-300 hover:scale-110 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-900"
                    aria-label="Show more experience"
                  >
                    <svg
                      id="toggle-experience-icon"
                      xmlns="http://www.w3.org/2000/svg"
                      class="h-6 w-6 transition-transform duration-500 ease-in-out" 
                      fill="none"
                      viewBox="0 0 24 24"
                      stroke="currentColor"
                    >
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                    </svg>
                  </button>
                </div>
              )}
            </div>
          </div>
        </div>
      </div>
    </section>
  )
}

<script>
  import AOS from 'aos';
  
  AOS.refresh()

  const toggleBtn = document.getElementById('toggle-experience-btn');
  const toggleIcon = document.getElementById('toggle-experience-icon');
  const expandableWrapper = document.getElementById('expandable-experience-wrapper');
  
  let isExpanded = false;

  if (toggleBtn && toggleIcon && expandableWrapper) {
    toggleBtn.addEventListener('click', () => {
      isExpanded = !isExpanded;

      if (isExpanded) {
        toggleIcon.classList.add('rotate-180');
      } else {
        toggleIcon.classList.remove('rotate-180');
      }

      if (isExpanded) {
        expandableWrapper.classList.remove('grid-rows-[0fr]');
        expandableWrapper.classList.add('grid-rows-[1fr]');
      } else {
        expandableWrapper.classList.remove('grid-rows-[1fr]');
        expandableWrapper.classList.add('grid-rows-[0fr]');
      }

      setTimeout(() => {
        AOS.refresh();
      }, 500);
    });
  }
</script>
