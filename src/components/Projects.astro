---
import { siteConfig } from "../config";
import "aos/dist/aos.css"; 

const projects = siteConfig.projects ?? [];
const accentColor = siteConfig.accentColor;
const visibleCount = 3; 
const visibleProjects = projects.slice(0, visibleCount);
const hiddenProjects = projects.slice(visibleCount);
---

{projects.length > 0 && (
  <section id="projects" class="p-8 sm:p-12 md:p-16 lg:p-24 overflow-hidden">
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-16">
      
      <div class="lg:col-span-4">
        <h2 class="text-3xl sm:text-4xl md:text-5xl xl:text-7xl font-bold text-gray-900">
          Projects
        </h2>
        <div
          class="w-[75px] h-[5px] mt-2 rounded-full"
          style={`background-color: ${accentColor}`}
        />
      </div>

      <div class="lg:col-span-8">
        <div class="space-y-8">
          
          {visibleProjects.map((project, index) => {
             const linkProps = project.link ? {
               href: project.link,
               target: "_blank",
               rel: "noopener noreferrer"
             } : {};

             return (
              <div 
                class="project-wrapper group relative"
                data-aos="fade-left"
                data-aos-delay={index * 100}
              >
                <div
                  {...linkProps}
                  class={`block relative p-4 sm:p-6 md:p-8 bg-gray-50 rounded-xl sm:rounded-2xl border border-gray-200 transition-all duration-300 ${
                    project.link ? "hover:bg-white hover:shadow-xl hover:border-gray-300 hover:-translate-y-1" : ""
                  }`}
                >
                  {project.link && (
            <a href={project.link}>
                    <div class="absolute top-4 right-4 sm:top-6 sm:right-6 md:top-8 md:right-8 w-10 h-10 sm:w-11 sm:h-11 md:w-12 md:h-12 flex items-center justify-center bg-gray-900 rounded-full text-white transition-all duration-300 group-hover:bg-gray-700">
                      <svg class="w-4 h-4 sm:w-5 sm:h-5 transition-transform duration-300 group-hover:translate-x-0.5 group-hover:-translate-y-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 17L17 7M17 7H7M17 7V17" /></svg>
                    </div>
            </a>
                  )}

                  <div class="space-y-4">
                    <div>
                      <span class="text-sm font-mono" style={{ color: accentColor }}>0{index + 1}</span>
                      <h3 class="text-xl sm:text-2xl font-bold text-gray-900 mt-1">{project.name}</h3>
                    </div>
                    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between mb-4 text-sm">
                      <div class="flex items-center gap-4 z-20">
                        <div class="flex items-center gap-1 text-gray-700">
                          <img src="/person.svg" alt="" class="w-7 h-7 opacity-70" />
                          <span>{project.contributors}</span>
                        </div>

                        {project.source && (
                          <a
                            href={project.source}
                            target="_blank"
                            rel="noopener noreferrer"
                            class="flex items-center gap-1 text-blue-600 hover:underline"
                          >
                            <img src="/source.svg" alt="" class="w-7 h-7" />
                          </a>
                        )}

                        {project.preview && (
                          <a
                            href={project.preview}
                            target="_blank"
                            rel="noopener noreferrer"
                            class="flex items-center gap-1 text-blue-600 hover:underline"
                          >
                            <img src="/picture.svg" alt="" class="w-7 h-7" />
                          </a>
                        )}

                      </div>

                      <span class="text-xs sm:text-sm text-gray-500 mt-2 sm:mt-0">
                        {project.dateRange}
                      </span>
                    </div>
                    <p class={`text-base sm:text-lg text-gray-600 leading-relaxed ${project.link ? "pr-12 sm:pr-14 md:pr-16" : ""}`}>{project.description}</p>
                    {project.skills?.length && (
                      <div class="flex flex-wrap gap-2 pt-2">
                        {project.skills.map((skill) => (
                          <span class={`px-3 py-1 bg-gray-900 text-white rounded-lg text-xs sm:text-sm font-medium transition-all duration-300 ${project.link ? "group-hover:bg-gray-800" : ""}`}>{skill}</span>
                        ))}
                      </div>
                    )}
                  </div>
                </div>
              </div>
             );
          })}

          {hiddenProjects.length > 0 && (
            <div 
              id="expandable-wrapper" 
              class="grid grid-rows-[0fr] transition-[grid-template-rows] duration-500 ease-in-out"
            >
              <div class="overflow-hidden">
                <div class="space-y-8 pt-8"> 
                  {hiddenProjects.map((project, index) => {
                    const globalIndex = index + visibleCount;
                    
                    const linkProps = project.link ? { href: project.link, target: "_blank", rel: "noopener noreferrer" } : {};

                    return (
                      <div 
                        class="project-wrapper group relative"
                        data-aos="fade-left"
                        data-aos-delay={globalIndex * 100}
                      >
                        <div
                          {...linkProps}
                          class={`block relative p-4 sm:p-6 md:p-8 bg-gray-50 rounded-xl sm:rounded-2xl border border-gray-200 transition-all duration-300 ${
                            project.link ? "hover:bg-white hover:shadow-xl hover:border-gray-300 hover:-translate-y-1" : ""
                          }`}
                        >
                           {project.link && (
                            <div class="absolute top-4 right-4 sm:top-6 sm:right-6 md:top-8 md:right-8 w-10 h-10 sm:w-11 sm:h-11 md:w-12 md:h-12 flex items-center justify-center bg-gray-900 rounded-full text-white transition-all duration-300 group-hover:bg-gray-700">
                              <svg class="w-4 h-4 sm:w-5 sm:h-5 transition-transform duration-300 group-hover:translate-x-0.5 group-hover:-translate-y-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 17L17 7M17 7H7M17 7V17" /></svg>
                            </div>
                          )}
                          <div class="space-y-4">
                            <div>
                              <span class="text-sm font-mono" style={{ color: accentColor }}>0{globalIndex + 1}</span>
                              <h3 class="text-xl sm:text-2xl font-bold text-gray-900 mt-1">{project.name}</h3>
                            </div>

                    <div class="flex items-center justify-between mb-4 text-sm">
                      <div class="flex items-center gap-4 z-20">
                        <div class="flex items-center gap-1 text-gray-700">
                          <img src="/person.svg" alt="" class="w-7 h-7 opacity-70" />
                          <span>{project.contributors}</span>
                        </div>

                        {project.source && (
                          <a
                            href={project.source}
                            target="_blank"
                            rel="noopener noreferrer"
                            class="flex items-center gap-1 text-blue-600 hover:underline"
                          >
                            <img src="/source.svg" alt="" class="w-7 h-7" />
                          </a>
                        )}

                        {project.preview && (
                          <a
                            href={project.preview}
                            target="_blank"
                            rel="noopener noreferrer"
                            class="flex items-center gap-1 text-blue-600 hover:underline"
                          >
                            <img src="/picture.svg" alt="" class="w-7 h-7" />
                          </a>
                        )}


                      </div>

                      <span class="text-xs sm:text-sm text-gray-500">
                        {project.dateRange}
                      </span>
                    </div>

                            <p class={`text-base sm:text-lg text-gray-600 leading-relaxed ${project.link ? "pr-12 sm:pr-14 md:pr-16" : ""}`}>{project.description}</p>
                            {project.skills?.length && (
                              <div class="flex flex-wrap gap-2 pt-2">
                                {project.skills.map((skill) => (
                                  <span class={`px-3 py-1 bg-gray-900 text-white rounded-lg text-xs sm:text-sm font-medium transition-all duration-300 ${project.link ? "group-hover:bg-gray-800" : ""}`}>{skill}</span>
                                ))}
                              </div>
                            )}
                          </div>
                        </div>
                      </div>
                    );
                  })}
                </div>
              </div>
            </div>
          )}

          {hiddenProjects.length > 0 && (
            <div class="flex justify-center mt-8">
              <button
                id="toggle-projects-btn"
                class="group p-3 rounded-full bg-gray-900 text-white hover:bg-gray-800 transition-all duration-300 hover:scale-110 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-900"
                aria-label="Show more projects"
              >
                <svg
                  id="toggle-icon"
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-6 w-6 transition-transform duration-500 ease-in-out" 
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                </svg>
              </button>
            </div>
          )}
        </div>
      </div>
    </div>
  </section>
)}


<script>
  import AOS from 'aos';
  
  AOS.refresh()
  
  const toggleBtn = document.getElementById('toggle-projects-btn');
  const toggleIcon = document.getElementById('toggle-icon');
  const expandableWrapper = document.getElementById('expandable-wrapper');
  
  let isExpanded = false;

  if (toggleBtn && toggleIcon && expandableWrapper) {
    toggleBtn.addEventListener('click', () => {
      isExpanded = !isExpanded;

      if (isExpanded) {
        toggleIcon.classList.add('rotate-180');
      } else {
        toggleIcon.classList.remove('rotate-180');
      }

      if (isExpanded) {
        expandableWrapper.classList.remove('grid-rows-[0fr]');
        expandableWrapper.classList.add('grid-rows-[1fr]');
      } else {
        expandableWrapper.classList.remove('grid-rows-[1fr]');
        expandableWrapper.classList.add('grid-rows-[0fr]');
      }

      setTimeout(() => {
        AOS.refresh();
      }, 500); 
    });
  }
</script>
